package hilos;

public class TareaHilo implements Runnable
{
	private String threadName;
	
	public TareaHilo(String nombre) 
	{
		
	}
	
	@Override
	public void run()
	{
		System.out.println("Ejecutando " + threadName);
		try
		{
			//El hilo realiza una tarea sencilla: contar
			for(int i=01; i<=5;i++)
			{
				System.out.println("Hilo: " + threadName + ", Contador: " + i);
				//Hace una pequeÃ±a pausa para simular trabajo y mostrar concurrencia
				Thread.sleep(2000);
			}
		}catch(InterruptedException e)
		{
			System.out.println(e.getMessage());
		}
	}
}
