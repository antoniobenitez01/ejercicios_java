package herramientas;

public abstract class HerramientasFun 
{
	public static void main(String[] args)
	{
		piramide('a',5);
	}
	
	//CHAR PIRAMID GENERATOR - Recoge un carácter y un número entero y muestra por pantalla una pirámide del carácter de base el número
	public static void piramide(char caracter, int num)
	{
		for(int i=0; i<(num+1); i++)
		{
            for(int j=(num+1)-i; j>1; j--)
            {
                System.out.print(" ");
            }
            	
			for(int j=0; j<i; j++)
			{
				System.out.print(caracter + " ");
			}
			System.out.println("");
		}
	}
}
