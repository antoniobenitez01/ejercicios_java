package ejercicio2;

import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class EjercicioB2 
{
	public static void main(String[] args) 
	{
		System.out.println("\n--- ALUMNOS ---\n");
		File archivo = new File("alumnos_notas.txt");
		Scanner reader = null;
		
		try 
		{
			reader = new Scanner(archivo);
		} catch (FileNotFoundException e) 
		{
			System.out.printf("%s\n", e.getMessage());
		}
		
		if(reader != null)
		{
			while(reader.hasNextLine())
			{
				mostrarAlumno(reader.nextLine());
			}
		}else
		{
			System.out.println("Se ha producido un error y el programa no se ha ejecutado.");
		}
	}
	
	private static void mostrarAlumno(String alumno)
	{
		String[] datos = alumno.split(" ");
		double media = 0;
		for(int i=2; i<datos.length;i++)
		{
			media += i;
		}
		
	}
}
