package ejercicio1;

import libtarea3.Dado;

public class Ejercicio1 
{

	public static void main(String[] args) 
	{
		long sumaGlobal = 0, valorMaximo = (int) ((Math.random()*31)+30);
		Dado jugador1 = new Dado(), jugador2 = new Dado(), jugador3 = new Dado();
		
		System.out.printf("LANZAMIENTO DE DADOS"+"\n---------------------------------------------");
		System.out.printf("\nNúmero máximo de puntos: %d" + "\n", valorMaximo);
		System.out.printf("\n                  DADO1     DADO2     DADO3" +"\n");
		do
		{
			System.out.printf("\nLanzamiento nº %d:   ", (jugador1.getNumeroLanzamientos()+1));
			System.out.printf("%d         %d         %d", jugador1.lanzar(), jugador2.lanzar(), jugador3.lanzar());
			sumaGlobal = jugador1.getSumaPuntuacionHistorica() + jugador2.getSumaPuntuacionHistorica() + jugador3.getSumaPuntuacionHistorica();
		}while(sumaGlobal < valorMaximo);
		System.out.printf("\n"+"\nJuego Terminado. La suma de los lanzamientos es: %d", sumaGlobal);
	
		System.out.printf("\nTodos los lanzamientos del dado ganador: " + dadoMayor(jugador1, jugador2, jugador3).getSerieHistoricaLanzamientos());
	}

	//MÉTODO - Recoge los tres dados para devolver el ganador con más puntuación
	public static Dado dadoMayor(Dado dado1, Dado dado2, Dado dado3)
	{
		Dado dadoMayor = null;
		if(dado1.getSumaPuntuacionHistorica() > dado2.getSumaPuntuacionHistorica())
		{
			dadoMayor = dado2;
		}
		else
		{
			dadoMayor = dado1;
		}
		return dadoMayor;
	}
}
