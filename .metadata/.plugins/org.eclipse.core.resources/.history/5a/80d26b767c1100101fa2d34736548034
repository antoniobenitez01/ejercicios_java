package ejercicio2;

import java.time.LocalDateTime;

public class Llamada 
{
	public enum Tipos {ENTRANTE, SALIENTE};
	private LocalDateTime fechahora;
	private Tipos tipo;
	
	public Llamada(LocalDateTime fechahora, Tipos tipo)
	{
		this.fechahora = fechahora;
		this.tipo = tipo;
	}
	
	public String toString()
	{
		return String.format("Fecha y hora: %s - Tipo: %s",
				this.fechahora, this.tipo.toString());
	}
}
