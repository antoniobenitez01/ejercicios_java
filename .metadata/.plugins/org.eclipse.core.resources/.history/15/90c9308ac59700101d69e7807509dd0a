/*
 * Programa que interactúa con un archivo de Propiedades
 * mediante la clase Property
 * Autor: Antonio Benítez Rodríguez
 * Fecha: 22/09/2025
 */
package configuracion;

import java.util.Properties;
import java.util.Scanner;
import java.io.*;

public class Main 
{
	public static void main(String[] args) 
	{
		Scanner entrada = new Scanner(System.in);
		Properties props = new Properties();
		String respuesta = "";
		do
		{
			System.out.println("Introduzca el nombre del archivo de propiedades a leer."
					+ "\nPara apagar el programa escriba 'fin'");
			respuesta = entrada.nextLine();
			try
			{
				props.load(new FileInputStream(respuesta));
				if(props.isEmpty())
				{
					System.out.println("El archivo de Propiedades está vacío.");
				}else
				{
					System.out.println("Introduzca la propiedad que desea buscar.");
					String respuesta2 = entrada.nextLine();
				}
			}catch(FileNotFoundException fnfe)
			{
				System.out.println("No se ha encontrado el archivo.");
			}catch(IOException ioe)
			{
				System.out.println("Ha ocurrido un problema al leer el archivo.");
			}
		}while(respuesta.toLowerCase().equalsIgnoreCase("fin"));
		entrada.close();
		System.out.println("Apagando programa ...");
	}
}
